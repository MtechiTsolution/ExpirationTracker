<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".add_products">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical">
            </LinearLayout>



    <ImageView
        android:id="@+id/imgs"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:src="@drawable/add_pic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="27dp">

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#fff"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:layout_gravity="center"
            app:cardCornerRadius="13dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <EditText
                android:background="@drawable/button_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:textColorHint="#28000000"
                android:textColor="#000"
                android:id="@+id/titl"
                android:text="Tiltle"
                android:hint="title">
            </EditText>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="13dp"
            android:layout_gravity="center"
            android:background="#fff"
            tools:ignore="MissingConstraints">

            <Spinner
                android:layout_width="match_parent"
                android:background="@drawable/button_back"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:textColorHint="#28000000"
                android:textColor="#000"
                android:id="@+id/ctgry"
                android:hint="select category">
            </Spinner>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#fff"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="13dp"
            android:layout_gravity="center"
            android:background="@drawable/button_back"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:inputType="none"
                android:layout_weight="1"
                android:id="@+id/expdte"
                android:textColorHint="#28000000"
                android:textColor="#000"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/button_back"
                android:drawableRight="@drawable/calender"
                android:hint="Exp. date">
            </EditText>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:cardCornerRadius="13dp"
   android:background="@drawable/button_back"
            tools:ignore="MissingConstraints">

            <Spinner
                android:layout_width="match_parent"
                android:background="@drawable/button_back"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:textColorHint="#28000000"
                android:textColor="#000"
                android:inputType="date"
                android:id="@+id/expcycl"
                android:hint="Exp.Cycle">
            </Spinner>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                app:cardCornerRadius="13dp"
                android:layout_gravity="center"
                android:background="@drawable/button_back"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <EditText
                    android:layout_width="match_parent"
                    android:background="@drawable/button_back"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColorHint="#28000000"
                    android:textColor="#000"
                    android:id="@+id/expric"
                    android:hint="Exp.price">
                </EditText>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="#fff"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_back"
                    app:cardCornerRadius="13dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/rmndr"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:textColorHint="#28000000"
                        android:textColor="#000"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/button_back"
                        android:drawableRight="@drawable/reminder"
                        android:hint="Reminder">
                    </EditText>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="13dp"

                    android:layout_gravity="center"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/loctn"
                        android:layout_weight="1"
                        android:textColorHint="#28000000"
                        android:textColor="#000"
                        android:background="@drawable/button_back"
                        android:hint="Prod.place"
                        tools:ignore="HardcodedText">
                    </EditText>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center"
                android:background="#fff"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_note"
            android:layout_margin="15dp"
            android:layout_weight="1"
            app:cardCornerRadius="13dp"
            app:cardBackgroundColor="#fff"
            android:layout_gravity="center"
            tools:ignore="InvalidId,MissingConstraints">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColorHint="#28000000"
                android:textColor="#000"
                android:background="@drawable/button_back"
                android:drawableRight="@drawable/add_note"
                android:hint="add note">
            </TextView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                app:cardCornerRadius="13dp"
                 android:background="@drawable/button_back"
                app:cardBackgroundColor="#fff"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/sve"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="Save Reminder"
                    android:background="@drawable/note_back_button">
                </Button>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>